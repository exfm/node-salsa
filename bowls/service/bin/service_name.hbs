#!/usr/bin/env node
"use strict";

// Main entry point for {{name}} service.

var app = require("../"),
    argv = require("optimist").argv;

var port = argv.p || 3000,
    host = argv.h || "0.0.0.0";

// Note: command line options don't work when called via `npm start`

// Run the app.

app.listen(
    port,
    host,
    function(){
        console.log("Express server listening at %s:%d in %s mode",
            host,
            port,
            app.settings.env
        );
    }
);

